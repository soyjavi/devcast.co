[data-atoms=app]
  [data-atom-li=video]
    WIDTH                     = 298px !important
    HEIGHT                    = 160px !important
    margin                    : (U / 2) !important
    padding                   : 0 !important
    display                   : inline-block !important
    width                     : WIDTH
    vertical-align            : top
    background-color          : #607d8b
    cursor                    : pointer
    > figure, .general
      width                   : WIDTH
      height                  : HEIGHT
    > figure
      background-position     : center center
      background-size         : 100%
      box-shadow                inset 0 0 0 10rem rgba(0,0,0,0.35)

    > .general
      position                : absolute
      top                     : 0px
      left                    : 0px
      > small
        position: absolute
        display: block
        padding: 0 (U / 6)
        right: U
        top: U
        font-size: (FONT_SIZE_NORMAL / 1.5)
        background-color: rgba(0,0,0,0.25)
        color: WHITE
      > h2
        position              : absolute
        bottom                : (U / 1.5)
        left                  : U
        right                 : U
        font-size             : SIZE = (1.25 * U)
        font-weight           : FONT_WEIGHT_THIN
        text-shadow           : 0 (U / 10) (U / 5) rgba(0,0,0,0.25)
        color                 : WHITE

    > .info
      &, & a
        color                 : rgba(255,255,255,0.85)
      > *
        padding               : (U / 1.5) U
        font-size             : FONT_SIZE_TINY
        &:not(:last-child)
          box-shadow            0 1px rgba(255,255,255,0.25)
      > strong
        font-weight           : FONT_WEIGHT_NORMAL
        // height                : (3.4 * U)
        // overflow              : hidden
      > nav > a
        padding-right         : (U / 2)
        font-weight           : FONT_WEIGHT_BOLD

    OPACITY = 0.35
    &.javascript, &.hadoop
      background-color        : JAVASCRIPT
      > figure
        box-shadow              inset 0 0 0 10rem alpha(JAVASCRIPT, OPACITY)
      > .info
        &, & a
          color                 : rgba(0,0,0,0.85)
    &.python
      background-color        : PYTHON
      > figure
        box-shadow              inset 0 0 0 10rem alpha(PYTHON, OPACITY)
    &.ruby
      background-color        : RUBY
      > figure
        box-shadow              inset 0 0 0 10rem alpha(RUBY, OPACITY)
    &.css
      background-color        : CSS
      > figure
        box-shadow              inset 0 0 0 10rem alpha(CSS, OPACITY)
    &.php
      background-color        : PHP
      > figure
        box-shadow              inset 0 0 0 10rem alpha(PHP, OPACITY)
    &.android
      background-color        : ANDROID
      > figure
        box-shadow              inset 0 0 0 10rem alpha(ANDROID, OPACITY)
    &.redis
      background-color        : REDIS
      > figure
        box-shadow              inset 0 0 0 10rem alpha(REDIS, OPACITY)
    &.nodejs
      background-color        : NODEJS
      > figure
        box-shadow              inset 0 0 0 10rem alpha(NODEJS, OPACITY)
    &.web
      background-color        : WEB
      > figure
        box-shadow              inset 0 0 0 10rem alpha(WEB, OPACITY)
    &.html5
      background-color        : HTML5
      > figure
        box-shadow              inset 0 0 0 10rem alpha(HTML5, OPACITY)
