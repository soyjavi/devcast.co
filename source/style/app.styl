[data-atoms=app]
  font-family: FONT_FAMILY
  font-weight: FONT_WEIGHT_THIN
  font-size: 100%
  background: darken(DARK, 100%)

  [data-tooltip]:after
    font-size: FONT_SIZE_TINY
    font-weight: FONT_WEIGHT_LIGHT
    background-color: rgba(0,0,0,.75)
    color: WHITE
    border-radius: BORDER_RADIUS

  .loading-animation
    &::before, &::after
      background-color: WHITE

  &[data-page="video"]
    > article
      z-index                 : 2
      background-color        : transparent !important
      height                  : (5 * U)
      header
        color                 : lighten(THEME, 75%)
        background-color      : alpha(THEME, 90%) !important
        a
          color               : lighten(THEME, 90%)
          &:hover
            color             : WHITE
        > h2
          font-weight         : FONT_WEIGHT_THIN
          font-size           : HEIGHT = (1.5 * U)
          > small
            font-size         : FONT_SIZE_SMALL
            > a
              font-weight     : FONT_WEIGHT_BOLD
        > nav
          position            : absolute
          right               : U
          padding-top         : (U / 8)
          > a
            padding           : (U / 6) (U / 3)
            margin-left       : (U / 3)
            font-size         : FONT_SIZE_TINY
            line-height       : FONT_SIZE_TINY
            font-weight       : FONT_WEIGHT_BOLD
            background-color  : darken(THEME, 25%)
            border-radius     : BORDER_RADIUS
            &:hover
              background-color: DARK

    > iframe
      z-index                 : 1
      width                   : 100%
      height                  : 100%
      position                : absolute
      top                     : 0
      left                    : 0
